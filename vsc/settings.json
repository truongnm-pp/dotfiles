{
    "workbench.startupEditor": "newUntitledFile",
    "window.zoomLevel": 1,
    "editor.fontFamily": "Menlo, Monaco, 'Courier New', monospace, Source Code Pro for Powerline",
    "terminal.external.linuxExec": "Terminal",
    "workbench.iconTheme": "material-icon-theme",
    "explorer.openEditors.visible": 0,
    "emmet.includeLanguages": {
        "vue-html": "html",
        "javascript": "javascriptreact"
    },
    "editor.formatOnSave": true,
    "telemetry.enableTelemetry": false,
    "workbench.colorTheme": "Dracula",
    "javascript.updateImportsOnFileMove.enabled": "always",
    "explorer.confirmDragAndDrop": false,
    "rubocop": {
        "lint": true, //enable all lint cops.
        "only": [ /* array: Run only the specified cop(s) and/or cops in the specified departments. */],
        "except": [ /* array: Run all cops enabled by configuration except the specified cop(s) and/or departments. */],
        "forceExclusion": true, //Add --force-exclusion option
        "require": [ /* array: Require Ruby files. */],
        "rails": true //Run extra rails cops
    },
    "ruby.lint": {
        "rubocop": true
    },
    "[ruby]": {
        "editor.formatOnSave": true
    },
    "ruby.format": "rubocop",
    "sync.gist": "718de1083bdf2997084c71e5958ac9ec"
}